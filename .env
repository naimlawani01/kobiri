# ===========================================
# KOBIRI - Configuration de l'environnement
# ===========================================
# Copiez ce fichier en .env et remplissez les valeurs
# cp .env.example .env

# -------------------------------------------
# APPLICATION
# -------------------------------------------
APP_NAME=Kobiri
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development  # development, staging, production

# -------------------------------------------
# BASE DE DONNÉES PostgreSQL
# -------------------------------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/kobiri
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE

# -------------------------------------------
# AUTHENTIFICATION JWT
# -------------------------------------------
# ⚠️ IMPORTANT: Changez cette clé en production!
# Générez une clé sécurisée avec: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# -------------------------------------------
# ORANGE MONEY API
# -------------------------------------------
ORANGE_MONEY_API_KEY=
ORANGE_MONEY_API_SECRET=
ORANGE_MONEY_CALLBACK_URL=https://api.kobiri.com/api/v1/payments/callback/orange

# -------------------------------------------
# MTN MOBILE MONEY API
# -------------------------------------------
MTN_MOMO_API_KEY=
MTN_MOMO_API_SECRET=
MTN_MOMO_CALLBACK_URL=https://api.kobiri.com/api/v1/payments/callback/mtn

# -------------------------------------------
# WAVE API
# -------------------------------------------
WAVE_API_KEY=
WAVE_API_SECRET=
WAVE_CALLBACK_URL=https://api.kobiri.com/api/v1/payments/callback/wave

# -------------------------------------------
# SMS (Notifications)
# -------------------------------------------
SMS_API_KEY=
SMS_SENDER_ID=KOBIRI

# -------------------------------------------
# EMAIL (Notifications)
# -------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@kobiri.com

# -------------------------------------------
# URLS
# -------------------------------------------
FRONTEND_URL=http://localhost:3000